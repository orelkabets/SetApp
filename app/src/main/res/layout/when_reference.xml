<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="50dp"
    android:orientation="horizontal"
    >

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="31dp"
        android:layout_height="31dp"
        android:id="@+id/settings"
        android:layout_marginRight="5dp"
        android:background="@drawable/ic_alarm"
        android:gravity="right|center"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="right|center_vertical" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="31dp"
        android:layout_height="31dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/ic_notification_red"
        android:id="@+id/search"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="left|center_vertical" />

    <ImageView
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:src="@drawable/ic_minus"
        android:gravity="center"
        android:textColor="@color/black"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_alignTop="@+id/endTime"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="END:"
        android:textColor="@color/purple"
        android:textStyle="bold"
        android:id="@+id/textView4"
        android:layout_gravity="left|center_vertical"
        android:layout_toEndOf="@+id/title"
        android:layout_marginStart="20dp"
        android:layout_marginTop="3dp"
        android:layout_above="@+id/endTime" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="START:"
        android:textColor="@color/purple"
        android:textStyle="bold"
        android:id="@+id/start"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginEnd="21dp"
        android:layout_toStartOf="@+id/title"
        android:layout_alignTop="@+id/textView4"
        android:layout_above="@+id/startTime" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="00:00"
        android:id="@+id/startTime"
        android:onClick="OnTimeClicked"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/start" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="12:00"
        android:onClick="OnTimeClicked"
        android:id="@+id/endTime"
        android:layout_alignTop="@+id/startTime"
        android:layout_alignStart="@+id/textView4" />


</RelativeLayout>